<article>
    <header>
        <h2><a href="{{ path('blog_core_post_show', { slug: post.slug }) }}">{{ post.title }}</a></h2>
        <p>
            Post On <time datetime="{{ post.createdAt | date('c') }}">{{ post.createdAt | date }}</time>
            In {{ post.category.name }}
            - <a href="{{ path('blog_core_post_show', { slug: post.slug }) }}#comments">
                {% set count = post.comments | length %}
                {{ count }} Comment
            </a>
        </p>
    </header>

    <p>{{ post.body | truncate(400) }} &#8212; <a href="{{ path('blog_core_post_show', { slug: post.slug }) }}">Read More &raquo;</a></p>
</article>